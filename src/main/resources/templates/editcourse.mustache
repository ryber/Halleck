<form method="post" action="/admin/course">
    <div class="container intro">
        <div class="row">
            <div class="threecol">
                Course Id: <input name="id" value="{{course.id}}" size="75" />
            </div>
        </div>
        <div class="row">
            <div class="threecol">
                Name: <input name="name" value="{{course.name}}"  size="75"/>
            </div>
        </div>
        <div class="row">
            <div class="threecol">
                Description: <textarea name="description" cols="58" rows="10">{{course.description}}</textarea>
            </div>
        </div>
        <div class="row">
            <div class="threecol">
                URL: <input name="url" type="text" value="{{course.url}}" size="75"/>
            </div>
        </div>
        <div class="row">
            <div class="threecol">
                Max Enrollment: <input name="max" type="number" value="{{course.maxEnrollment}}"/>
            </div>
        </div>
        <div class="row">
            <div class="threecol">
                Current Enrollment: {{course.registeredUsers.size}} {{#course.id}} - <a href="/admin/course/{{course.id}}/registrations">view{{/course.id}}
            </div>
        </div>
        <div class="row">
            <div class="threecol">
                <input type="submit"/>
            </div>
</form>